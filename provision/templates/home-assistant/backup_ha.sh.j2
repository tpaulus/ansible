#!/usr/bin/env bash

{{ ansible_managed | comment }}

set -e

# Setup
mount_dir=$(mktemp -d)
sudo mount -t nfs {{ backup_server }}:{{ backup_path }} ${mount_dir}

# Backup the data
# --archive is -rlptgoD
rsync --archive --partial --delete {{ backup_source }} "${mount_dir}"

# Clean Up
umount "${mount_dir}"
rmdir "${mount_dir}"

# Update Backup Timestamp Metric
echo home_assistant_backup_completed $(date +%s) > /var/lib/node_exporter/home_assistant_backup.prom.$$
mv /var/lib/node_exporter/home_assistant.prom.$$ /var/lib/node_exporter/home_assistant_backup.prom